.disabled
	cursor default
	opacity .5
	pointer-events none

.hidden
	display none !important

.hide
	display none

.show
	display block !important

.invis
	visibility hidden

.old-browser
	background grey
	width 100%
	height 100vh
	padding-top 200px

.old-browser-text
	text-align center
	color white
	font-size 20px

.msg
	padding: 8px 16px
	br(10px)

