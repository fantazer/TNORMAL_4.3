.disabled
	cursor default
	opacity .5
	pointer-events none

.hidden
	display none !important

.hide
	display none

.show
	display block !important

.invisible
	visibility hidden

.tr
	transition all .4s

.tr--bg
	transition background .4s

.tr--color
	transition color .4s

.tr--fill
	transition fill .4s

.msg
	padding: 8px 16px
	br(10px)

.cp
	cp()

.bg-full
	bg-full()

// fix iphone input bug
@media screen and (-webkit-min-device-pixel-ratio:0)
	select:focus,
	textarea:focus,
	input:focus
		font-size: 16px;
		background: #eee;

@media screen and (-webkit-min-device-pixel-ratio:0)
	select,
	textarea,
	input
		font-size: 16px!important
// fix iphone input bug === end






